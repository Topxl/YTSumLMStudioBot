# Configuration du Bot Telegram
# Obtenez votre token auprès de @BotFather sur Telegram
TELEGRAM_BOT_TOKEN=token_telegram

# Configuration de l'API LM Studio
# URL de votre instance LM Studio (exemple avec localhost)
LM_API_URL=http://localhost:1234



# Configuration des paramètres de l'API LM Studio
# Contrôle la créativité des réponses (0.0 = très précis, 1.0 = très créatif)
LM_TEMPERATURE=0.7

# Nombre maximum de tokens pour les réponses
LM_MAX_TOKENS=100000

# Longueur maximale du contexte pour le modèle
LM_CONTEXT_LENGTH=4096

# Taille maximale des morceaux de texte pour le traitement
LM_CHUNK_SIZE=12000

# Configuration des notifications
# Intervalle de vérification des nouvelles vidéos en secondes (30 minutes par défaut)
CHECK_INTERVAL=1800

# Configuration des sous-titres
# Langue préférée pour les sous-titres (fr = français)
SUBTITLES_LANGUAGE=fr

# Configuration audio
# Langue pour la conversion texte-voix (fr = français)
TTS_LANGUAGE=fr

# Configuration des résumés
# Nombre maximum de points clés dans le résumé
SUMMARY_MAX_POINTS=5

# Configuration des abonnements
# Nombre maximum de vidéos à conserver par chaîne
MAX_VIDEOS_PER_CHANNEL=50 